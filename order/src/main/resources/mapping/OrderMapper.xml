<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luojianhua.repository.OrderRepository">

  <resultMap id="orderMap" type="com.luojianhua.entity.Order">
      <id column="id" property="id"></id>
      <result column="date" property="date"></result>
      <result column="state" property="state"></result>
     <association property="menu" select="com.luojianhua.repository.MenuRepository.findById" column="mid"></association>
  </resultMap>

   <select id="findAllById" resultMap="orderMap">
     select id,mid,date,state from t_order where uid=#{param3} limit #{param1},#{param2}
   </select>


    <insert id="save" parameterType="com.luojianhua.entity.Order">
        insert into t_order(uid,mid,date,state)values(#{user.id},#{menu.id},#{date},0)
    </insert>

    <select id="countById" resultType="int" parameterType="int">
        select count(*) from t_order where uid=#{param1}
    </select>

</mapper>